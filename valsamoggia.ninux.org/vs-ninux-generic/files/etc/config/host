
config dnsmasq
	option domainneeded '1'
	option localise_queries '1'
	option rebind_protection '1'
	option rebind_localhost '1'
	option expandhosts '1'
	option authoritative '1'
	option readethers '1'
	option leasefile '/tmp/dhcp.leases'
	option resolvfile '/tmp/resolv.conf.auto'
	option nonwildcard '1'
	option localservice '1'
	option dhcpscript '/usr/bin/dnsmasq-lease-share.sh'
	option dhcphostsfile '/tmp/dhcp.hosts_remote'
	option domain 'valsamoggia.ninux.org'
	option local '/valsamoggia.ninux.org/'
	list server '4.2.2.2'
	list server '141.1.1.1'
	list server '2001:470:20::2'

config dhcp 'lan'
	option interface 'lan'
	option start '100'
	option limit '150'
	option leasetime '12h'
	option ignore '1'

config dhcp 'wan'
	option interface 'wan'
	option ignore '1'

config dhcp 'lm_net_br_lan_anygw_if_dhcp'
	option interface 'lm_net_br_lan_anygw_if'
	option start '5120'
	option limit '27648'
	option leasetime '1h'
	option force '1'

config tag 'lm_net_br_lan_anygw_if'
	option force '1'
	list dhcp_option 'option:mtu,1350'

config hostrecord 'anygw_dns'
	option ip '10.170.0.1,2a00:1508:aaa:a200::1'
	list name 'anygw'
	list name 'thisnode.info'
	list name 'minodo.info'
	list name 'nostro.nodo'

config host
	option dns '1'
	option name 'claudia'
	option ip '10.170.10.10'
	option mac '00:1A:92:1E:F5:60'
