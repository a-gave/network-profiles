config net 'lm_hwd_openwrt_wan'
	option comment 'in Jardi botanic topology we need to use as wan the inderface which get POE input, while OpenWrt would defalut to lan on flex mArch'
	option autogenerated 'false'
	list protocols 'ieee80211s'
	list protocols 'adhoc'
	list protocols 'batadv:%N1'
	list protocols 'bmx6:0:8021q:_qmp'
	list protocols 'bmx6:0'
	list protocols 'wan'
	option linux_name 'eth0.1'

config wifi radio0
	option comment 'the radio embedded in flex mArch doesn't work well with multiple VAPs'
	option channel_2ghz '11'
	option distance '1000'
	list modes 'ap'
	option ap_ssid 'jardibotanic-test'

config wifi radio1
	option comment 'the radio embedded in flex mArch doesn't work well with multiple VAPs'
	list modes ieee80211s
	option channel_5ghz '48'
	option htmode_5ghz 'HT40'
	option distance '1000'
	option ieee80211s_mesh_fwding '0'
	option ieee80211s_mesh_id 'LiMe'
