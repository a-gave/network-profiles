config lime system
	option hostname 'BCNmtj3DracaenaCanaria'

config lime network
	option main_ipv4_address '10.1.104.134/21'
	option main_ipv6_address '2a00:1508:1:fe4c::104:134/64'

config net 'lm_hwd_openwrt_wan'
	option comment "in Jardi botanic topology we need to use as wan the interface which get POE input, while OpenWrt would default to lan on flex mArch"
	option autogenerated 'false'
	list protocols 'ieee80211s'
	list protocols 'batadv:%N1'
	list protocols 'bmx6:0'
	list protocols 'wan'
	option linux_name 'eth0.1'

config wifi radio0
	option comment "the radios which comes with flex mArch do not work well with multiple VAPs"
	option autogenerated 'false'
	option channel_2ghz '11'
	option distance '1000'
	list modes 'ap'
	option ap_ssid 'jardibotanic.guifi.net'
